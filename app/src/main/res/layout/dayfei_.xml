<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/day_tepsf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="选择配送费："
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/day_linpsh"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/day_tesq"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/roundbackground_qrdd"
            android:gravity="center"
            android:text="√市区(免费)"
            android:textColor="@color/select_tefenlei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/day_tejq"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/roundbackground_qrdd"
            android:gravity="center"
            android:text="郊区(+30元)"
            android:textColor="@color/select_tefenlei"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/day_teyj"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/roundbackground_qrdd"
            android:gravity="center"
            android:text="远郊(+50元)"
            android:textColor="@color/select_tefenlei"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/space_size_50"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/space_size_15"
            android:paddingBottom="@dimen/space_size_15"
            android:contentDescription="@null"
            android:src="@drawable/rebac" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/space_size_50"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/space_size_15"
            android:paddingBottom="@dimen/space_size_15"
            android:layout_alignParentEnd="true"
            android:contentDescription="@null"
            android:src="@drawable/arrow_right" />

        <LinearLayout
            android:id="@+id/date_operator_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/date_text"
                style="@style/myschedule_current_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <com.example.juandie_hua.calender.utils.WeekDayView
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.example.juandie_hua.calender.utils.MonthDateView
            android:id="@+id/monthDateView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/day_tepssj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="请选择配送时间"
            android:textColor="#da0000"
            android:textSize="14sp" />

        <View 
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/day_tedsts"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="定时服务+30元,误差±20分钟"
            android:textColor="#da0000"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/day_tequit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_gradient"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>