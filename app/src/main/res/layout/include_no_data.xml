<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_fff"
    android:scrollbars="none"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_fff"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/shop_cart_no_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nogoods_tego"
                android:layout_centerHorizontal="true"
                android:text="购物车空空如也"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/nogoods_tego"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_size_20"
                android:layout_marginBottom="@dimen/space_size_25"
                android:background="@drawable/bk_corner_grey"
                android:gravity="center"
                android:text="随便看看"
                android:textColor="@color/red_d5001b"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_size_10"
            android:background="@color/grey_f4f4f4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_size_25"
            android:layout_marginBottom="@dimen/space_size_20"
            android:text="猜你喜欢"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_16" />

        <com.example.juandie_hua.mainactivity.goods.MyGridView
            android:id="@+id/shop_cart_favor_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:padding="@dimen/space_size_5" />

    </LinearLayout>
</ScrollView>