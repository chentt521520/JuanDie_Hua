<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/space_size_150"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/daohan_imsj"
        android:layout_width="@dimen/space_size_12"
        android:layout_height="@dimen/space_size_10"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:src="@drawable/sanjiao" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biankuangdaohan"
        android:orientation="vertical"
        android:padding="@dimen/space_size_10">

        <TextView
            android:id="@+id/item_menu_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/home"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="首页"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/search"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="搜索"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_menu_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/collection"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="我的收藏"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_menu_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/share"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="分享"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_menu_browsing_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/browsing_history"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="浏览记录"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_menu_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/me"
            android:drawablePadding="@dimen/space_size_15"
            android:padding="@dimen/space_size_8"
            android:text="个人中心"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

</LinearLayout>