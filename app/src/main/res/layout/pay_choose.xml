<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/paychoose_retop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f3f5" >

        <ImageView
            android:id="@+id/paychoose_imreturn"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fh" />

        <TextView
            android:id="@+id/paychoose_tetitl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="支付订单"
            android:textColor="#8c8c8c"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/paychoose_payje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="需支付"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/paychoose_payje1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="￥0.00"
        android:textColor="#da0000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/paychoose_tezffs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#f2f3f5"
        android:gravity="center_vertical"
        android:text="选择付款方式："
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/paychoose_rezfb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/paychoose_imzfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/zfbp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/paychoose_tezfb"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:gravity="center|bottom"
                android:text="支付宝支付"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/paychoose_tezfb1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="4"
                android:gravity="center|top"
                android:text="支付宝余额及花呗支付,有卡就能付"
                android:textColor="#888888"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/paychoose_imzfbxz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:id="@+id/paychoose_rewx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/biankuangsxfkno"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/paychoose_imwx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/wxp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/paychoose_tewx"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:gravity="center|bottom"
                android:text="微 信 支 付"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/paychoose_tewx1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="4"
                android:gravity="center|top"
                android:text="需要安装微信客服端才可以微信支付"
                android:textColor="#888888"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/paychoose_imwxxzq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:id="@+id/paychoose_rejd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/biankuangsxfkno"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/paychoose_imjd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/jdpay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/paychoose_tejd"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="5"
                android:gravity="center|bottom"
                android:text="京东支付"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/paychoose_tejd1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="4"
                android:gravity="center|top"
                android:text="支持所有银行卡支付"
                android:textColor="#888888"
                android:textSize="11sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/paychoose_imjdxzq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/paychoose_tepay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbackground_login"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="#ffffff"
        android:textSize="16sp" />

</LinearLayout>