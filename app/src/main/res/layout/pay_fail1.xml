<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/payfail_retop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f3f5" >

        <TextView
            android:id="@+id/payfail_tetitl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="支付订单"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payfail_tetitl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/payfail_tetitl"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/payfail_imv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:src="@drawable/zfsb" />

    <TextView
        android:id="@+id/payfail_teres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="支付失败，请重新支付"
        android:textColor="#666666"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/payfail_tets"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="支付失败提示 "
        android:textColor="#333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/payfail_tets1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="此订单尚未支付成功，请重新支付 "
        android:textColor="#333"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/payfail_but"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/payfail_tere"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/roundbackground_order"
            android:gravity="center"
            android:maxLength="10"
            android:text="重新支付"
            android:textColor="#da0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/payfail_tedd"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/roundbackground_orderno"
            android:gravity="center"
            android:maxLength="10"
            android:text="查看订单"
            android:textColor="#666666"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>