<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_size_45"
    android:background="@color/white_fff">

    <ImageView
        android:id="@+id/ddanxq_imreturn"
        android:layout_width="@dimen/space_size_50"
        android:layout_height="match_parent"
        android:padding="@dimen/space_size_12"
        android:src="@drawable/fh" />

    <ImageView
        android:id="@+id/ddanxq_imcha"
        android:layout_width="@dimen/space_size_50"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/ddanxq_imreturn"
        android:padding="@dimen/space_size_12"
        android:scaleType="fitCenter"
        android:src="@drawable/xx" />

    <TextView
        android:id="@+id/ddanxq_tetit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#666666"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>