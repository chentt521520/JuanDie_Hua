<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_45"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flss_imreturn"
            android:layout_width="@dimen/space_size_50"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/space_size_12"
            android:src="@drawable/fh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_size_10"
            android:layout_marginTop="@dimen/space_size_7"
            android:layout_marginEnd="@dimen/space_size_10"
            android:layout_marginBottom="@dimen/space_size_7"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/fenleitop"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/space_size_15">

            <ImageView
                android:id="@+id/flss_imss"
                android:layout_width="@dimen/space_size_20"
                android:layout_height="@dimen/space_size_20"
                android:src="@drawable/fenlei_ss" />

            <EditText
                android:id="@+id/flss_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_size_15"
                android:background="@null"
                android:hint="搜索关键词"
                android:imeOptions="actionDone"
                android:maxLength="50"
                android:singleLine="true"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/flss_tess"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:padding="@dimen/space_size_10"
            android:text="搜索"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_bottom_line"
        android:padding="@dimen/space_size_15"
        android:text="正在热搜中"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.example.juandie_hua.mainactivity.fenlei.ss.FlowGroupView_fl
        android:id="@+id/flss_flow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="20dp" />

</LinearLayout>