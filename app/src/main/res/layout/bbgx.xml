<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/font_size_12"
    android:alpha="0.7"
    android:background="@drawable/biankuang_bbgx"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/bbgxte_tit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="版本更新下载中。。。"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/preview_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_10"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progress="0"
        android:layout_marginTop="@dimen/font_size_10"
        android:layout_marginBottom="@dimen/font_size_10"
        android:progressDrawable="@drawable/progressbar_preview" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bbgxte_bfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0%"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bbgxte_jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/100"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>