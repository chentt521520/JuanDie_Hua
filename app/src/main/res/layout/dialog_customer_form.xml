<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corner_white_10"
            android:orientation="vertical"
            android:paddingTop="@dimen/space_size_15"
            android:paddingBottom="@dimen/space_size_15">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/space_size_5"
                android:paddingStart="@dimen/space_size_15"
                android:paddingEnd="@dimen/space_size_15"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/dialog_massage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/space_size_5"
                android:paddingStart="@dimen/space_size_15"
                android:paddingEnd="@dimen/space_size_15"
                android:layout_marginTop="@dimen/space_size_10"
                android:text=""
                android:textColor="#4d4d4d"
                android:textSize="@dimen/font_size_14"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/divider_line"
            style="@style/ui_line" />

        <LinearLayout
            android:id="@+id/comment_quitteq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_size_45"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#da0000"
                android:textSize="@dimen/font_size_14" />

            <View
                android:id="@+id/line_divider"
                style="@style/ui_vertical_line" />

            <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>