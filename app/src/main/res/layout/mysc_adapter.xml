<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/mycar_view">

    <LinearLayout
        android:id="@+id/myscada_lin1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myscada_imhead"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/user_static" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myscada_tetit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingRight="12dp"
                android:singleLine="true"
                android:text="阿迪达斯运动鞋"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/myscada_teprice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:text="￥499.00"
                android:textColor="#da0000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/myscada_texiaoshou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="已售00件"
                android:textColor="#aaaaaa"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/myscada_imdetel"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:src="@drawable/shanchu" />
    </LinearLayout>

    <View
        android:id="@+id/myscada_xuxian"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/xuxian"
        android:layerType="software" />

</LinearLayout>