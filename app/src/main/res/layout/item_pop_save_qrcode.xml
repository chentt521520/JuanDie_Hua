<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pop_close"
        android:layout_width="@dimen/space_size_50"
        android:layout_height="@dimen/space_size_50"
        android:layout_gravity="end"
        android:padding="@dimen/space_size_15"
        android:src="@drawable/xx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@mipmap/icon_right"
        android:drawablePadding="@dimen/space_size_10"
        android:text="二维码已保存到相册"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_size_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_size_25"
        android:background="@drawable/bk_border_grey"
        android:orientation="vertical"
        android:padding="@dimen/space_size_5">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/attention_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/juandie_service_account"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_10" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_size_35">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/arrow_right"
            android:drawableStart="@mipmap/we_chat"
            android:drawablePadding="@dimen/space_size_10"
            android:text="打开微信扫一扫"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_12" />

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/space_size_20"
            android:layout_marginEnd="@dimen/space_size_20"
            android:src="@drawable/arrow_right" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/arrow_right"
            android:drawableStart="@mipmap/scanning"
            android:drawablePadding="@dimen/space_size_10"
            android:text="点击右上角从相册中导入"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pop_to_wechart"
        android:layout_width="@dimen/space_size_200"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_size_25"
        android:layout_marginBottom="@dimen/space_size_20"
        android:background="@drawable/bg_btn_corner_gradient"
        android:gravity="center"
        android:text="@string/scan_to_follow"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>