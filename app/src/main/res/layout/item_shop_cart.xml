<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shop_cart_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_shop_cart_good_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/space_size_12"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/space_size_12">

        <TextView
            android:id="@+id/item_shop_cart_good_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_12"
            android:layout_toStartOf="@+id/item_shop_cart_good_delete"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_null"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/item_shop_cart_good_delete"
            android:layout_width="@dimen/space_size_40"
            android:layout_height="@dimen/space_size_40"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/space_size_10"
            android:src="@drawable/shanchu" />

        <TextView
            android:id="@+id/item_shop_cart_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shop_cart_good_type"
            android:layout_marginTop="@dimen/space_size_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/text_null"
            android:textColor="@color/black_666666"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_shop_cart_good_specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shop_cart_good_name"
            android:layout_marginTop="@dimen/space_size_5"
            android:background="@color/grey_f0f0f0"
            android:drawableEnd="@mipmap/icon_select_specs"
            android:drawablePadding="@dimen/space_size_5"
            android:paddingStart="@dimen/space_size_5"
            android:paddingTop="@dimen/space_size_3"
            android:paddingEnd="@dimen/space_size_5"
            android:paddingBottom="@dimen/space_size_3"
            android:text="@string/text_null"
            android:textColor="@color/black_656565"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_shop_cart_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/text_null"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_shop_cart_good_orgprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_shop_cart_good_price"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/space_size_10"
            android:layout_toEndOf="@+id/item_shop_cart_good_price"
            android:text="@string/text_null"
            android:textColor="@color/black_666666"
            android:textSize="@dimen/font_size_10" />

        <LinearLayout
            android:id="@+id/item_shop_cart_good_count_view"
            android:layout_width="80dp"
            android:layout_height="@dimen/space_size_25"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/font_size_12"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_shop_cart_good_count_de"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/biankuangqb2"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/font_size_18" />

            <EditText
                android:id="@+id/item_shop_cart_good_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/biankuangsx"
                android:digits="0123456789"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:text="1"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/font_size_14" />

            <Button
                android:id="@+id/item_shop_cart_good_count_increase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/biankuangqb2"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>