<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/yhqitem_lin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#f34a4a"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/yhqitem_lin1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#f34a4a"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yhqitem_te2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="￥11.00"
                android:textColor="#ffffff"
                android:textSize="27sp" />

            <TextView
                android:id="@+id/yhqitem_te3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="未使用"
                android:textColor="#fce7e7"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/yhqadaimfgx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#f34a4a"
            android:scaleType="fitXY"
            android:src="@drawable/fgx" />

        <LinearLayout
            android:id="@+id/yhqadalin3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f34a4a"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yhqitem_tebianhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="xywawsd"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/yhqitem_teyusetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:text="使用期限:"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>