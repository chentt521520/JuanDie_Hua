<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/space_size_8"
    android:id="@+id/item_view">

    <ImageView
        android:id="@+id/item_shop_cart_recommond_good_image"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/item_shop_cart_recommond_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_size_5"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/text_null"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/font_size_12" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_size_5">

        <TextView
            android:id="@+id/item_shop_cart_recommond_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_null"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_shop_cart_recommond_good_orgprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_shop_cart_recommond_good_price"
            android:text="@string/text_null"
            android:textColor="@color/grey_999999"
            android:textSize="@dimen/font_size_10" />

        <ImageView
            android:id="@+id/item_shop_cart_recommond_add_shoping_car"
            android:layout_width="@dimen/space_size_25"
            android:layout_height="@dimen/space_size_25"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/add_shoping_car" />
    </RelativeLayout>

</LinearLayout>