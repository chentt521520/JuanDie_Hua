<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_fff"
    android:orientation="vertical">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="@dimen/space_size_45"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/logo_christmas" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="@dimen/space_size_45"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:background="@drawable/bg_corner_grey_30"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_size_30"
            android:text="本机号码"
            android:textColor="#343434"
            android:textSize="@dimen/font_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/space_size_15"
            android:layout_marginEnd="@dimen/font_size_13"
            android:background="#343434" />

        <TextView
            android:id="@+id/fast_login_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#343434"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/ui_fast_login"
        android:layout_width="290dp"
        android:layout_height="@dimen/space_size_45"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_corner_gradient"
        android:gravity="center"
        android:onClick="fastLogin"
        android:text="本机号码一键登录"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/ui_fast_login_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:onClick="fastLogin"
        android:text="其他号码登录"
        android:layout_centerHorizontal="true"
        android:textColor="#343434"
        android:textSize="@dimen/font_size_16" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="— 第三方账号登录 —"
            android:textColor="#949494"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_size_30"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ui_fast_login_wx"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="fastLogin"
                android:src="@mipmap/login_wx" />

            <ImageView
                android:id="@+id/ui_fast_login_wb"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="fastLogin"
                android:src="@mipmap/login_wb" />

            <ImageView
                android:id="@+id/ui_fast_login_qq"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:onClick="fastLogin"
                android:src="@mipmap/login_qq" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>