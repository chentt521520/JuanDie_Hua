<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/yhqitem_lin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#f4f4f4"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/yhqitem_lin1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/wsy1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yhqitem_te2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="￥11.00"
                android:textColor="#ffffff"
                android:textSize="37sp" />

            <TextView
                android:id="@+id/yhqitem_te3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="未使用"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/yhqadalin3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/wsy2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/yhqitem_tebianhao"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1.5"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/roundbackground_yhqf"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/yhqitem_teyhqfw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="适用范围:全部商品"
                android:textColor="#666666"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/yhqitem_teyusetime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="122112"
                    android:textColor="#737373"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/yhqitem_teyusetime1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/roundbackground_yhqx"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="使用"
                    android:textColor="#da0000"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c3c3c3" />

            <TextView
                android:id="@+id/yhqitem_teyhqfw1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="新用户专享优惠券"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>