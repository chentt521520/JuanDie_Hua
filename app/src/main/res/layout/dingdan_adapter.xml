<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ddcx_rename"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/ddcx_tename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="订单号：  "
            android:textColor="#888888"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ddcx_tename1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ddcx_tename"
            android:gravity="center_vertical"
            android:text="待收货"
            android:textColor="#333"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/ddcx_tename"
            android:layout_alignParentBottom="true"
            android:background="#f4f4f4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ddcx_rezh"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/ddcx_tezt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="订单状态：  "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ddcx_tezt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ddcx_tezt"
            android:layout_toRightOf="@id/ddcx_tezt"
            android:gravity="center_vertical"
            android:text="支付成功  "
            android:textColor="#3985ff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ddcx_teprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ddcx_tezt"
            android:gravity="center_vertical"
            android:text="订单总价：  "
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ddcx_teprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/ddcx_teprice"
            android:layout_below="@id/ddcx_tezt"
            android:layout_toRightOf="@id/ddcx_teprice"
            android:gravity="center_vertical"
            android:text="￥0.01  "
            android:textColor="#e4393c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ddcx_texq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundbackground_ddcx"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#f4f4f4" />

    <com.example.juandie_hua.mainactivity.goods.MyListView
        android:id="@+id/ddcx_mylistv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f4f4f4" />

</LinearLayout>