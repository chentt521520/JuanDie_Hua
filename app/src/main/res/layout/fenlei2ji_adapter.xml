<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fl2ji_lin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/fl2ji_imdian"
            android:layout_width="@dimen/space_size_10"
            android:layout_height="@dimen/space_size_10"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/space_size_10"
            android:background="@drawable/dot_black" />

        <TextView
            android:id="@+id/fl2ji_tename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_size_15"
            android:gravity="center_vertical"
            android:text="用途"
            android:textColor="@color/black_333333"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <com.example.juandie_hua.mainactivity.fenlei.NoScrollGridView
        android:id="@+id/fl2ji_gridv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:numColumns="3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

</LinearLayout>