<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ea9fa4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_45"
        android:layout_marginTop="@dimen/space_size_30">

        <ImageView
            android:id="@+id/back_page"
            android:layout_width="@dimen/space_size_45"
            android:layout_height="@dimen/space_size_45"
            android:padding="@dimen/space_size_12"
            android:onClick="phoneLoginClick"
            android:src="@mipmap/page_back" />

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="@dimen/space_size_15"
            android:paddingEnd="@dimen/space_size_15"
            android:text="关闭"
            android:onClick="phoneLoginClick"
            android:textColor="@color/black_666666"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <TextView
        android:id="@+id/loginp_teph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_size_100"
        android:layout_gravity="center_horizontal"
        android:text="登录/注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_size_40"
        android:layout_marginStart="@dimen/space_size_20"
        android:layout_marginTop="@dimen/space_size_50"
        android:layout_marginEnd="@dimen/space_size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+86"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/loginp_edph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space_size_20"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/space_size_20"
        android:layout_marginEnd="@dimen/space_size_20"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/space_size_20"
        android:layout_marginTop="@dimen/space_size_30"
        android:layout_marginEnd="@dimen/space_size_20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/loginp_edyzm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="0123456789"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="14sp" />

        <com.example.juandie_hua.view.TimerView
            android:id="@+id/timer_view"
            android:layout_width="@dimen/space_size_120"
            android:layout_height="@dimen/space_size_35"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:background="@drawable/biankuang_ph1"
            android:gravity="center"
            android:maxLength="10"
            android:onClick="phoneLoginClick"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/space_size_20"
        android:layout_marginEnd="@dimen/space_size_20"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/loginp_teok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/space_size_20"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="@dimen/space_size_20"
        android:background="@drawable/bk_squre_white"
        android:gravity="center"
        android:onClick="phoneLoginClick"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>