<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_grey_8"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ui_good_recommend_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/space_size_10" />

    <RelativeLayout
        android:id="@+id/lin_recommend"
        android:layout_width="120dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/space_size_10"
            android:paddingStart="0dp"
            android:text="="
            android:textSize="@dimen/font_size_20"/>

        <TextView
            android:id="@+id/te_allprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tegotobuy"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tegotobuy"
            android:layout_width="@dimen/space_size_90"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_size_10"
            android:background="@drawable/bg_btn_corner_gradient"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:text="立即购买"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tebuynumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tegotobuy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="11sp" />
    </RelativeLayout>
</LinearLayout>