<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/myorderitem_lincon"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/myorderitem_imtp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/myorderitem_tetit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋阿迪达斯运动鞋"
                android:textColor="#666666"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/myorderitem_teprice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="￥499.00"
                    android:textColor="#da0000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/myorderitem_tenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="x1"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/xuxian"
        android:visibility="gone" />

</LinearLayout>