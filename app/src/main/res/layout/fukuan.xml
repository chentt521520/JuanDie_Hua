<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fk_rezfb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fk_imzfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/zfbp" />

        <TextView
            android:id="@+id/fk_tezfb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="支付宝支付"
            android:textColor="#666666"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fk_imzfbxz"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/fk_rewx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/biankuangsxfkno"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fk_imwx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/wxp" />

        <TextView
            android:id="@+id/fk_tewx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="微 信 支 付"
            android:textColor="#666666"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fk_imwxxzq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/fk_rejd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/biankuangsxfkno"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fk_imjd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:padding="5dp"
            android:src="@drawable/jdpay" />

        <TextView
            android:id="@+id/fk_tejd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="京 东 支 付"
            android:textColor="#666666"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fk_imjdxzq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:src="@drawable/xzq"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/fk_rexz"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/fk_teok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="12dp"
            android:text="确定支付"
            android:textColor="#4eccc4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fk_teqx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/fk_teok"
            android:gravity="center"
            android:paddingRight="22dp"
            android:text="取消"
            android:textColor="#4eccc4"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>