<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_retop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f2f3f5" >

        <ImageView
            android:id="@+id/login_imreturn"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fh" />

        <TextView
            android:id="@+id/login_tetit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="会员登录"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0" />

    <ImageView
        android:id="@+id/login_imhead"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:scaleType="fitCenter"
        android:src="@drawable/login_user" />

    <LinearLayout
        android:id="@+id/login_qiehuan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/login_qiehuan1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/login_imhuiy"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_huiyuan" />

            <TextView
                android:id="@+id/login_tehuiy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="会员账号登录"
                android:textColor="@color/select_telogin"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_qiehuan2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/login_imduanx"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_dx" />

            <TextView
                android:id="@+id/login_teduanx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="短信快捷登录"
                android:textColor="@color/select_telogin"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_qiehuan_"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <View
            android:id="@+id/login_hen1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_loginhen" />

        <View
            android:id="@+id/login_hen2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_loginhen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_linhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/login_rehuiy1"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/login_tezhangh"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="账号 :    "
                android:textColor="@color/select_telogin"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_edzhangh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/login_tezhangh"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingRight="20dp"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/login_tezhangh"
                android:background="#f4f4f4" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_rehuiy2"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/login_temim"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="密码 :    "
                android:textColor="@color/select_telogin"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_edmim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/login_temim"
                android:background="@null"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnm"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingRight="20dp"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/login_immmxians"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:src="@drawable/selector_mima" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_linyzm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/login_resjhao1"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/login_tesjhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="手机号 :    "
                android:textColor="@color/select_telogin"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/login_edsjhao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/login_tesjhao"
                android:background="@null"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingRight="20dp"
                android:textColor="#666666"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/login_tesjhao"
                android:background="#f4f4f4" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_resjhao2"
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/login_teyzm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="验证码 :    "
                android:textColor="@color/select_telogin"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/login_teyzm"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/login_edyzm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:digits="0123456789"
                    android:hint="6位验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingRight="20dp"
                    android:textColor="#666666"
                    android:textColorHint="#999999"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f4f4f4" />

                <com.example.juandie_hua.percenter.TimerTextView
                    android:id="@+id/login_tegetyzm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="10"
                    android:text="获取验证码"
                    android:textColor="#da0000"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/login_telogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundbackground_login"
        android:gravity="center"
        android:maxLength="10"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/login_zcAzhmm"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_tezc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="快速注册"
            android:textColor="#666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/login_tezhmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="找回密码"
            android:textColor="#666666"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>