<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/flss_retop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/flss_imreturn"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fh" />

        <EditText
            android:id="@+id/flss_edit"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/flss_imreturn"
            android:background="@drawable/fenleitop"
            android:gravity="center_vertical"
            android:hint="搜索关键词"
            android:maxLength="50"
            android:imeOptions="actionDone"
            android:paddingLeft="40dp"
            android:singleLine="true"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/flss_imss"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/flss_imreturn"
            android:scaleType="fitCenter"
            android:src="@drawable/fenlei_ss" />

        <TextView
            android:id="@+id/flss_tess"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/flss_edit"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#666666"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <TextView
        android:id="@+id/flss_teti"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:text="正在热搜中"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f8f8f8" />

    <com.example.juandie_hua.mainactivity.fenlei.ss.FlowGroupView_fl
        android:id="@+id/flss_flow1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:minHeight="20dp" />

</LinearLayout>