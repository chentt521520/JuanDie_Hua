<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_goods_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bk_shade"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_show_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_good_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_size_7">

            <TextView
                android:id="@+id/item_good_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/item_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_good_type"
                android:layout_marginTop="@dimen/space_size_4"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/item_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_good_name"
                android:layout_marginTop="@dimen/space_size_7"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/item_good_orgprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_good_price"
                android:textColor="@color/grey_999999"
                android:textSize="@dimen/font_size_10" />

            <ImageView
                android:id="@+id/item_add_shoping_car"
                android:layout_width="@dimen/space_size_25"
                android:layout_height="@dimen/space_size_25"
                android:layout_alignBottom="@+id/item_good_orgprice"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/add_shoping_car" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_good_sort_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/bg"
        android:visibility="gone" />

</RelativeLayout>