<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f7f7" >

    <View
        android:id="@+id/view_footkb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/linv_addmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_footkb"
        android:layout_centerHorizontal="true"
        android:background="#f3f7f7"
        android:clickable="false"
        android:orientation="horizontal"
        android:paddingTop="12dp" >

        <com.example.juandie_hua.mainactivity.CircularProgressView
            android:id="@+id/cirprogre_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textv_landmore"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:text="    加载中....."
            android:textColor="#999999"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>