<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/roundbackground_tuijianyu"
    android:orientation="vertical" >

  

        <TextView
            android:id="@+id/babbeb_tit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="娟蝶鲜花新版本上线了"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bbgx_neiron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="娟蝶鲜花新版本上线了"
            android:lineSpacingExtra="5dp"
            android:textColor="#666666"
            android:paddingBottom="12dp"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tuichu"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/biankuang"
                android:gravity="center"
                android:text="暂不更新"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reintc"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="#da0000"
                android:textSize="12sp" />
        </LinearLayout>
  

</LinearLayout>