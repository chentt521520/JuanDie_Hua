<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/odqr_yhqlistv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:dividerHeight="1dp"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4" />

    <LinearLayout
        android:id="@+id/odqr_yhqedlin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanjiaoquit"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/odqr_yhqedte"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="手动填写优惠券"
            android:textColor="#666666"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f4f4f4" />

        <EditText
            android:id="@+id/odqr_yhqed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/roundbackground_addpic"
            android:gravity="left|center_vertical"
            android:hint="请输入优惠券号码"
            android:maxLength="20"
            android:paddingLeft="12dp"
            android:textColor="#666666"
            android:textColorHint="#999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="优惠券在提交订单后就失效了哦!"
            android:textColor="#999999"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/odqr_quitteq"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/biankuangs"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/odqr_quitok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="确定"
                android:textColor="#da0000"
                android:textSize="15sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/odqr_quitno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>