<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pinjia_retop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/pinjia_imreturn"
            android:layout_width="30dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fh" />

        <TextView
            android:id="@+id/pinjia_tetit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我要评价"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#f4f4f4" />

            <TextView
                android:id="@+id/pinjia_tecon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:lineSpacingExtra="5dp"
                android:text="亲爱的用户:\n如若您对我们的服务与产品感觉满意，请给我们一些掌声，如果有不足的地方请毫无保留的指正。"
                android:textColor="#999"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/pinjia_ddhao"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/pinjia_teddhao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="订单号： "
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/pinjia_teddhao1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/pinjia_teddhao"
                    android:gravity="center_vertical"
                    android:text="21213123213"
                    android:textColor="#333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f4f4f4" />

            <RelativeLayout
                android:id="@+id/pinjia_fuwu"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/pinjia_tefuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="客服态度:   "
                    android:textColor="#333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/pinjia_linfuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/pinjia_tefuwu"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pinjia_kfxin1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_kfxin2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_kfxin3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_kfxin4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_kfxin5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f4f4f4" />

            <RelativeLayout
                android:id="@+id/pinjia_peishong"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/pinjia_tepeishong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="配送速度:   "
                    android:textColor="#333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/pinjia_linpeishong"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/pinjia_tepeishong"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pinjia_ps1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_ps2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_ps3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_ps4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_ps5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f4f4f4" />

            <RelativeLayout
                android:id="@+id/pinjia_zl"
                android:layout_width="match_parent"
                android:layout_height="40dp" >

                <TextView
                    android:id="@+id/pinjia_tezl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="鲜花质量:   "
                    android:textColor="#333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/pinjia_linzl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/pinjia_tezl"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/pinjia_zl1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_zl2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_zl3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_zl4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />

                    <ImageView
                        android:id="@+id/pinjia_zl5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_hua" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f4f4f4" />

            <LinearLayout
                android:id="@+id/pinjia_lintuwen"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/roundbackground_addpic"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/pinjia_editcom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="#ffffff"
                    android:gravity="top"
                    android:hint="说点什么吧~"
                    android:maxLength="120"
                    android:textColor="#666666"
                    android:textColorHint="#999999"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/pinjia_lintp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/pinjia_retp1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/pinjia_imtp1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp" />

                        <ImageView
                            android:id="@+id/pinjia_imtp1de"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/detel" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pinjia_retp2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/pinjia_imtp2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp" />

                        <ImageView
                            android:id="@+id/pinjia_imtp2de"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/detel" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pinjia_retp3"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:visibility="visible" >

                        <ImageView
                            android:id="@+id/pinjia_imtp3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="7dp"
                            android:paddingTop="5dp" />

                        <ImageView
                            android:id="@+id/pinjia_imtp3de"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/detel" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/pinjia_imadd"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/addimg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pinjia_linyzm"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/pinjia_teyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="验证码 :   "
                    android:textColor="#333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/pinjia_edyzm"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:hint="必填，请输入-"
                    android:maxLength="4"
                    android:textColorHint="#666666"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/pinjia_code"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="#f4f4f4" />

            <TextView
                android:id="@+id/pinjia_tjiao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/roundbackground_login"
                android:gravity="center"
                android:maxLength="10"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>